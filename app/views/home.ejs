<!DOCTYPE html>

<html lang="en">
	<head>
		<% include ./partials/head.ejs %>
	</head>

	<body>
    	<header>
    		<% include ./partials/header.ejs %>
    	</header>
        <main>
            <div class="container">
		        <h1>Home</h1>
		     
		       <% if(isLoggedIn) { %>
	    	    <a class='btn btn-primary btn-lg' href='/poll'>
		        	<i class='fa fa-plus fa-fw'></i>
		        	<span>Create Poll</span>
	        	</a>
	        	<a class='btn btn-primary btn-lg'>
		        	<span>View My Polls</span>
	        	</a>
	        	<hr/>
		        <% } %>
		        
		        <% if (polls.length) { %>
		        <p class=lead> Select a poll below to vote</p>
		        <table class='table table-striped table-hover'>
		        <% polls.forEach(function(poll) { %>
		        		<tr>
				        	<td>
				        		<a href='/vote?id=<%= poll._id %>' style='display:block;width:100%;height:100%'>		        		
				        		 <%= poll.question %>
				        		<div>
				        		 	<em class='text-muted'> - <%= poll.createdbyname %> </em>
				        		</div>
			        		</a>
				        	</td>
				        	<% if(isLoggedIn){%>
				        	<td width="50px" style='vertical-align:middle;' >
				        		<a href='/poll?id=<%= poll._id %>'>
				        			<i class='fa fa-edit fa-lg'></i>
				        		</a>
				        	</td>
				        	<% } %>
			        	</tr>	
		        <% }); %>
		       
		        </table>
		        
		        <% } else { %>
			        <p class=lead> There are no polls created yet. Please login to create one.</p>
		        <% } %>
		    </div>
        </main>
	</body>
	
   	<% include ./partials/mainscripts.ejs %>
</html>

